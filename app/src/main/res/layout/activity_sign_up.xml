<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- כותרת -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרסום משרה"
            android:textSize="22sp"
            android:textColor="#21323A"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- גיל העובד -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="גיל העובד"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:id="@+id/spinner_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- מיקום העבודה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מיקום העבודה"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_locations"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp" />

        <!-- סוג העבודה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוג העבודה"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_job_types"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp" />

        <!-- סוג העסקה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוג העסקה"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:id="@+id/spinner_employment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- שכר -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שכר"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edit_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הכנס את השכר בשקלים"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textColor="#21323A"
            android:textColorHint="#6D7A80"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- מידע נוסף -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מידע נוסף"
            android:textColor="#21323A"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/edit_additional_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:hint="הכנס מידע נוסף במידת הצורך"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textColor="#21323A"
            android:textColorHint="#6D7A80"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- רשימת משרות זמינות -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משרות זמינות"
            android:textColor="#21323A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_jobs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false" />

        <!-- כפתור פרסם -->
        <Button
            android:id="@+id/button_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פרסם"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D47A1"
            android:padding="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
